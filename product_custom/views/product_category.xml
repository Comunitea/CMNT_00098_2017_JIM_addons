<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="product_category_form_active" model="ir.ui.view">
        <field name="name">product.category.form.actice</field>
        <field name="model">product.category</field>
        <field name="inherit_id" ref="product.product_category_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='button_box']" position="before">
                <field name="image" widget="image" class="oe_avatar"/>
            </xpath>
            <xpath expr="//div[@name='button_box']" position="inside">
                <button name="toggle_active" type="object"
                    class="oe_stat_button" icon="fa-archive">
                    <field name="active" widget="boolean_button"
                    options='{"terminology": "archive"}'/>
                </button>
            </xpath>
            <field name="parent_id" position="after">
                <field name="web"/>
            </field>
        </field>
    </record>

    <record id="view_product_category_form_b2b" model="ir.ui.view">
        <field name="name">product.category.view.form.b2b</field>
        <field name="model">product.category</field>
        <field name="inherit_id" ref="product.product_category_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='first']" position="after">
                <group>
                    <field name="child_id" widget="one2many_list" mode="tree">
                        <tree decoration-success="active == True and web == True">
                            <field name="sequence" widget="handle"/>
                            <field name="name"/>
                            <field name="active"/>
                            <field name="web"/>
                        </tree>
                    </field>
                </group>
            </xpath>
        </field>
    </record>
</odoo>
