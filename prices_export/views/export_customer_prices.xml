<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- export.prices tree view -->
    <record id="export_customer_prices_view_tree" model="ir.ui.view">
        <field name="name">export.customer.prices.view.tree</field>
        <field name="model">export.customer.prices</field>
        <field name="arch" type="xml">
            <tree create="0">
               <field name="last_sinc"/>
               <field name="product_id"/>
               <field name="partner_id"/>
               <field name="price"/>
            </tree>
        </field>
    </record>

    <record id="export_customer_prices_action" model="ir.actions.act_window">
        <field name="name">export.customer.prices.action</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">export.customer.prices</field>
        <field name="view_mode">tree</field>
        <field name="view_type">form</field>
    </record>

    <menuitem id="menu_export_customer_prices" name="Export Customer Prices" parent="sale.menu_product_pricelist_main"
              action="export_customer_prices_action"/>

</odoo>
