<odoo>
    <template id="stock_transfer_report_document">
        <t t-foreach="docs" t-as="o">
            <t t-set="noproforma" t-value="True"/>
            <t t-set="o" t-value="o.with_context({'lang':o.partner_id.lang})" />
            <t t-if="o and 'company_id' in o">
                <t t-set="company" t-value="o.company_id"></t>
            </t>
            <t t-if="not o or not 'company_id' in o">
                <t t-set="company" t-value="res_company"></t>
            </t>
            <div class="header">
                <div class="row">
                    <div class="col-xs-6 sombreado" style="margin-bottom: 15px;">
                        <img t-if="company.logo" t-att-src="'data:image/png;base64,%s' % company.logo" style="max-height: 45px;"/>

                        <span t-field="company.partner_id"
                            t-field-options='{"widget": "contact", "fields": ["address", "name"], "no_marker": true}'/>
                        <p><strong>CIF/NIF:</strong> <span t-field="company.vat"/></p>
                        <p><strong>Telf.:</strong> <span t-field="company.phone"/> <strong>FAX:</strong> <span t-field="company.fax"/></p>
                    </div>
                    <div class="col-xs-6">
                        <h1 style="text-align:center;">TRASLADO</h1>
                    </div>
                </div>
                <div class="row">
                    <div class="col-xs-6 col-xs-offset-6">
                        <div t-field="o.partner_id"
                                t-field-options='{"widget": "contact", "fields": ["address", "name"], "no_marker": true}' />
                    </div>
                </div>
                <table class="custom_table"  style="margin-top: 15px;">
                    <thead>
                        <tr>
                            <th>Nº Traslado</th>
                            <th>Estado</th>
                            <th>Fecha compromiso</th>
                            <!--<th>Fecha entrega</th>-->
                            <th>Origen</th>
                            <th>Destino</th>
                            <th>Agente</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td><span t-field="o.name"/></td>
                            <td><span t-field="o.state"/></td>
                            <td><span t-field="o.scheduled_date"/></td>
                            <td><span t-field="o.location_id"/></td>
                            <td><span t-field="o.location_dest_id"/></td>
                            <td><span t-field="o.create_uid.name"/></td>
                        </tr>
                    </tbody>
                    <tfoot>
                        <tr>

                            <td></td>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td></td>
                        </tr>

                    </tfoot>
                </table>
            </div>
            <div class="page">
                <div class="radius_border_min">
                    Obs:
                    <span t-field="o.note"/>
                </div>

                <table class="custom_table" style="margin-top: 20px;">
                    <thead>
                        <tr>
                            <th>Referencia</th>
                            <th>Descripción</th>
                            <th>EAN</th>
                            <th>Cantidad</th>

                        </tr>
                    </thead>
                    <tbody>
                        <t t-if="o.state == 'done'" t-foreach="o.pack_operation_product_ids" t-as="line">
                            <tr>
                                <td>
                                    <span t-field="line.product_id.default_code"/>
                                </td>
                                <td>
                                    <!--<span t-field="line.linked_move_operation_ids[0].move_id.name_report"/>-->
                                    <span t-field="line.product_id.sga_name_get"/>
                                </td>
                                <td>
                                    <span t-field="line.product_id.barcode"/>
                                </td>
                                <td>
                                    <span t-field="line.qty_done"/>
                                </td>
                            </tr>
                        </t>
                        <t t-if="o.state != 'done'" t-foreach="o.move_lines" t-as="line">
                            <tr>
                                <td>
                                    <span t-field="line.product_id.default_code"/>
                                </td>
                                <td>
                                    <span t-field="line.product_id.sga_name_get"/>
                                </td>
                                <td>
                                    <span t-field="line.product_id.barcode"/>
                                </td>
                                <td>
                                    <span t-field="line.product_uom_qty"/>
                                </td>
                            </tr>
                        </t>
                    </tbody>
                    <tfoot>
                        <tr>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td></td>
                        </tr>
                    </tfoot>
                </table>
                <div class="oe_structure"/>
            </div>
            <div class="footer"></div>
        </t>
    </template>

    <delete id="stock.action_report_picking" model="ir.actions.report"/>

    <record id="stock_transfer_report" model="ir.actions.report">
        <field name="report_name">custom_documents.stock_transfer_report_document</field>
        <field name="file">custom_documents.stock_transfer_report_document</field>
        <field name="report_type">qweb-pdf</field>
        <field name="model">stock.picking</field>
        <field name="name">Traslado</field>
    </record>

    <record id="custom_documents.stock_transfer_report" model="ir.actions.report">
        <field name="paperformat_id" ref="picking_paperformat_euro" />
    </record>
</odoo>
