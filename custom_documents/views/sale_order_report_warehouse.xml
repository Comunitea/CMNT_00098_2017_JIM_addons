<odoo>
    <data>
        <template id="custom_sale_order_report_sin_precio"> 
            <t t-foreach="docs" t-as="doc">
                <t t-set="noproforma" t-value="True"/>
                <t t-call="custom_documents.custom_layout">
                    <t t-set="doc" t-value="doc.with_context({'lang':doc.partner_id.lang})" />
                    <div class="page">
                        <div name="payment_term"/>
                        <div class="radius_border">
                            Obs.: <span t-field="doc.note"/>
                        </div>
                        <table class="custom_table" style="margin-top: 20px;">
                            <thead>
                                <tr>
                                    <th>Reference</th>
                                    <th>Description</th>
                                    <th>Quantity</th>
                                     <th>Warehouse</th>
                                    
                                </tr>
                            </thead>
                            <tbody>
                                <tr t-foreach="doc.order_line" t-as="line">
                                    <td>
                                        <span t-field="line.product_id.default_code"/>
                                    </td>
                                    <td>
                                        <span t-field="line.name"/>
                                    </td>
                                    <td>
                                        <span t-field="line.product_uom_qty"/>
                                    </td>
                                    <td>
                                        <span t-field="line.order_id.warehouse_id.code"/>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                     <!-->tabla almacén</-->
                        
                        <table class="custom_table" style="margin-top: 20px;">
                    
                            <tr>
                              <td><strong>Firma</strong></td>
                              <td><strong>Bultos Jim</strong></td>
                              <td><strong>Bultos EME</strong></td>
                               <td><strong>Total Bultos</strong></td>
                            </tr>
                             
                            <tr>
                              <td><strong>Peso</strong></td>
                              <td> </td>
                              <td> </td>
                              <td> </td>
                            </tr>
                             
                            </table>
                                                    
                        <div class="oe_structure"/>
                    </div>
                </t>
            </t>
        </template>

        <report 
            id="report_sale_order_report_sin_precio" 
            name="custom_documents.custom_sale_order_report_sin_precio" 
            file="custom_documents.custom_sale_order_report_sin_precio" 
            report_type="qweb-pdf" 
            model="sale.order" 
            string="Pedido sin valorar"/>
        <record id="custom_documents.report_sale_order_report_warehouse" model="ir.actions.report.xml">
            <field name="paperformat_id" ref="paperformat_euro" />
        </record>
	</data>
</odoo>
