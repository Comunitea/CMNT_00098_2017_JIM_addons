<odoo>
    <template id="assets_common" name="custom css assets" inherit_id="report.assets_common">
        <xpath expr="." position="inside">
            <link rel="stylesheet" href="/custom_documents/static/src/css/custom.css"/>
        </xpath>
    </template>

    <template id="custom_layout">
        <!-- Multicompany -->
        <t t-if="not o and doc">
            <t t-set="o" t-value="doc"/>
        </t>
        <t t-if="o and 'company_id' in o">
            <t t-set="company" t-value="o.company_id"></t>
        </t>
        <t t-if="not o or not 'company_id' in o">
            <t t-set="company" t-value="res_company"></t>
        </t>


        <t t-if="o._name == 'sale.order'" t-call="custom_documents.custom_layout_header_sale" />
        <t t-if="o._name == 'stock.picking'" t-call="custom_documents.custom_layout_header_picking" />
        <t t-if="o._name == 'account.invoice'" t-call="custom_documents.custom_layout_header_invoce" />
        <t t-if="o._name == 'purchase.order'" t-call="custom_documents.custom_layout_header_purchase" />
        <t t-raw="0" />
        <t t-call="custom_documents.custom_layout_footer" />
    </template>

<!-- cabeceira para pedidos e proforma que se trata como un pedido, mira si esta marcado o campo neutro e logo si imprime proforma ou pedido -->
    <template id="custom_layout_header_sale">
        <div class="header">
            <div class="row">
                <div class="col-xs-6 sombreado" style="margin-bottom: 15px;" t-if=" not o.documento_neutro">
                    <img t-if="company.logo" t-att-src="'data:image/png;base64,%s' % company.logo" style="max-height: 45px;"/>

                    <span t-field="company.partner_id"
                        t-field-options='{"widget": "contact", "fields": ["address", "name"], "no_marker": true}'/>
                    <p><strong>CIF/NIF:</strong> <span t-field="company.vat"/></p>
                    <p><strong>Telf.:</strong> <span t-field="company.phone"/> <strong>FAX:</strong> <span t-field="company.fax"/></p>
                </div>
                <div class="col-xs-5 col-xs-offset-1">

                     <t t-if="not noproforma">
                        <h1 t-if="o.state != 'proforma'">ORDER <span t-if="o.copy_printing">(COPY)</span></h1>
                        <h1 t-if="o.state == 'proforma'">PROFORMA <span t-if="o.copy_printing">(COPY)</span></h1>
                    </t>
                     <t t-if="noproforma">
                        <h1 >ORDER <span t-if="o.copy_printing">(COPY)</span></h1>
                    </t>


                </div>
            </div>
            <div class="row">
                <div class="col-xs-6 radius_border_min">
                    <strong>Dirección de envío:</strong>
                    <div t-field="o.partner_shipping_id"
                        t-options='{"widget": "contact", "fields": ["address", "name", "phone", "fax"], "no_marker": True, "phone_icons": True}'/>
                </div>
                <div class="col-xs-6 radius_border_min">
                     <strong>Dirección facturación:</strong>
                    <div t-field="o.partner_id"
                            t-field-options='{"widget": "contact", "fields": ["address", "name"], "no_marker": true}' />
                </div>
            </div>
            <div class="row" t-if="o._name == 'stock.picking'">
                <div class="col-xs-6 col-xs-offset-6 radius_border">
                    <div t-field="o.partner_id"
                            t-field-options='{"widget": "contact", "fields": ["address", "name"], "no_marker": true}' />
                </div>
            </div>
            <div class="row mt32">
                <div class="col-xs-12">
                    <table class="custom_table">
                        <thead>
                            <tr>
                                <th>Customer Nª</th>
                                <th>CIF/NIF</th>
                                <th>Page nº</th>
                                <th>Date</th>
                                <th>Order Nº</th>
                                <th>Agent</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td><span t-field="o.partner_id.ref"/></td>
                                <td><span t-field="o.partner_id.vat"/></td>
                                <td>
                                    Page: <span class="page"/> of <span class="topage"/>
                                </td>
                                <td><span t-field="o.date_order"/></td>
                                <td><span t-field="o.name"/></td>
                                <td><span t-field="o.user_id.name"/> </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </template>
    <!-- cabeceira para albarán, mira si esta marcado o campo neutro -->
    <template id="custom_layout_header_picking">
        <div class="header">
            <div class="row">
                <div class="col-xs-6 sombreado" style="margin-bottom: 15px;" t-if=" not o.documento_neutro">
                    <img t-if="company.logo" t-att-src="'data:image/png;base64,%s' % company.logo" style="max-height: 45px;"/>

                    <span t-field="company.partner_id"
                        t-field-options='{"widget": "contact", "fields": ["address", "name"], "no_marker": true}'/>
                    <p><strong>CIF/NIF:</strong> <span t-field="company.vat"/></p>
                    <p><strong>Telf.:</strong> <span t-field="company.phone"/> <strong>FAX:</strong> <span t-field="company.fax"/></p>
                </div>
                <div t-if="o.documento_neutro">

                    <span t-field="o.sale_id.partner_id"
                        t-field-options='{"widget": "contact", "fields": ["address", "name"], "no_marker": true}'/>
                </div>
                <div class="col-xs-5 col-xs-offset-1">
                    <h1>PICKING</h1>
                </div>
            </div>
            <!--dirección de facturación e envío-->
            <div class="row">

                 <div class="col-xs-6 radius_border_min">
                     <strong>Direción de envío:</strong>
                    <div t-field="o.partner_id"
                            t-field-options='{"widget": "contact", "fields": ["address", "name"], "no_marker": true}' />
                </div>


                <div class="col-xs-6 radius_border_min">
                    <strong>Direción de facturación:</strong>
                    <div t-field="o.sale_id.partner_invoice_id"
                            t-field-options='{"widget": "contact", "fields": ["address", "name"], "no_marker": true}' />
                </div>

            </div>

            <div class="row mt32">
                <div class="col-xs-12">
                    <table class="custom_table">
                        <thead>
                            <tr>
                                <th>Customer Nº</th>
                                <th>CIF/NIF</th>
                                <th>Page nº</th>
                                <th>Date</th>
                                <th>Order Nº</th>
                                <th>Agent</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td><span t-field="o.partner_id.ref"/></td>
                                <td><span t-field="o.partner_id.vat"/></td>
                                <td>
                                    Page: <span class="page"/> of <span class="topage"/>
                                </td>
                                <td><span t-field="o.min_date"/></td>
                                <td><span t-field="o.name"/></td>
                                <td><span/> </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </template>
    <!-- cabeceira para facturas-->
     <template id="custom_layout_header_invoce">
        <div class="header">
            <div class="row">
                <div class="col-xs-6 sombreado" style="margin-bottom: 15px;" >


                    <img t-if="company.logo" t-att-src="'data:image/png;base64,%s' % company.logo" style="max-height: 45px;"/>

                    <span t-field="company.partner_id"
                        t-field-options='{"widget": "contact", "fields": ["address", "name"], "no_marker": true}'/>
                    <p><strong>CIF/NIF:</strong> <span t-field="company.vat"/></p>
                    <p><strong>Telf.:</strong> <span t-field="company.phone"/> <strong>FAX:</strong> <span t-field="company.fax"/></p>
                </div>
                <div class="col-xs-5 col-xs-offset-1">
                    <h1>INVOICE</h1>
                </div>
            </div>
            <div class="row">
                <div class="col-xs-6 radius_border">
                    <div t-field="o.partner_shipping_id"
                            t-field-options='{"widget": "contact", "fields": ["address", "name"], "no_marker": true}' />
                </div>
                <div class="col-xs-6 radius_border">
                    <div t-field="o.commercial_partner_id"
                            t-field-options='{"widget": "contact", "fields": ["address", "name"], "no_marker": true}' />
                </div>
            </div>
            <div class="row mt32">
                <div class="col-xs-12">
                    <table class="custom_table">
                        <thead>
                            <tr>
                                <th>Customer Nª</th>
                                <th>CIF/NIF</th>
                                <th>Page nº</th>
                                <th>Date</th>
                                <th>Order Nº</th>
                                <th>Agent</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td><span t-field="o.commercial_partner_id.ref"/></td>
                                <td><span t-field="o.commercial_partner_id.vat"/></td>
                                <td>
                                    Page: <span class="page"/> of <span class="topage"/>
                                </td>
                                <td><span t-field="o.date_invoice"/></td>
                                <td><span t-field="o.number"/></td>
                                <td><span t-field="o.user_id"/></td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </template>

     <!-- cabeceira para pedido de compra-->


    <template id="custom_layout_header_purchase">
        <div class="header">
            <div class="row">
                <div class="col-xs-6 sombreado" style="margin-bottom: 15px;">
                    <img t-if="company.logo" t-att-src="'data:image/png;base64,%s' % company.logo" style="max-height: 45px;"/>

                    <span t-field="company.partner_id"
                        t-field-options='{"widget": "contact", "fields": ["address", "name"], "no_marker": true}'/>
                    <p><strong>CIF/NIF:</strong> <span t-field="company.vat"/></p>
                    <p><strong>Telf.:</strong> <span t-field="company.phone"/> <strong>FAX:</strong> <span t-field="company.fax"/></p>
                </div>
            </div>
        </div>
    </template>






    <template id="custom_layout_footer">
        <div class="footer">
            <t t-if="o._name == 'account.invoice'">
                <div class="col-xs-1" t-if="o.company_id.iso_logo">
                    <img t-att-src="'data:image/png;base64,%s' % o.company_id.iso_logo" style="height: 50px;"/>
                </div>
                <div class="text-center">
                    <!--para que non aparezca o pe con etiquetas html usar t-raw-->
                    <span t-raw="company.qweb_invoice_footer"/>
                </div>

            </t>
            <t t-if="o._name != 'account.invoice'">
                <div class="text-center">
                    <!--para que non aparezca o pe con etiquetas html usar t-raw-->
                    <span t-raw="company.qweb_footer"/>
                </div>
            </t>
        </div>
    </template>

</odoo>
