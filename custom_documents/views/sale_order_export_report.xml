<odoo>
    <data>
        <template id="report_sale_order_export_doc_data">
            <t t-call="custom_documents.custom_layout">
                <t t-set="doc" t-value="doc.with_context({'lang':doc.partner_id.lang})" />
                <div class="page">
                    <h1>Prueba</h1>
                </div>
            </t>

        </template>



    <template id="report_sale_order_export_doc">
        <t t-call="report.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="custom_documents.report_sale_order_export_doc_data" t-lang="doc.partner_id.lang"/>
            </t>
        </t>
    </template>

        <report
            id="report_sale_order_export"
            string="Quotation / Order (export)"
            model="sale.order"
            report_type="qweb-pdf"
            file="custom_documents.report_sale_order_export_doc"
            name="custom_documents.report_sale_order_export_doc"
        />

        <record id="custom_documents.report_sale_order_export" model="ir.actions.report.xml">
            <field name="paperformat_id" ref="sale_paperformat_euro" />
        </record>
    </data>
</odoo>
