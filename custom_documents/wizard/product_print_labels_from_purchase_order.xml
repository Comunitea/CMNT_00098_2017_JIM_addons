<?xml version="1.0" encoding="utf-8"?>
<odoo>

        <record id="product_print_labels_from_purchase_form" model="ir.ui.view">
            <field name="name">product.print.labels.from.purchase.form</field>
            <field name="model">product.print.labels.from.purchase</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Print assitance report">
                    <footer>
                        <button name="print_label" string="Print" type="object" class="oe_highlight"/>
                        or
                        <button string="Cancel" class="oe_link" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="product_print_labels_from_purchase_action" model="ir.actions.act_window">
                <field name="name">Print product label</field>
                <field name="res_model">product.print.labels.from.purchase</field>
                <field name="binding_model_id" ref="purchase.model_purchase_order/>
                <field name="view_id">product_print_labels_from_purchase_form</field>
                <field name="view_mode">form</field>
                <field name="target">new</field>
        </record>
</odoo>
