<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.ui.view" id="crm_claim_rma_form_view_jim">
        <field name="name">CRM - Claim product return Form</field>
        <field name="model">crm.claim</field>
        <field name="inherit_id" ref="crm_claim_rma.crm_claim_rma_form_view"/>
        <field name="arch" type="xml">
            <field name="team_id" position="after">
                <field name="company_id"/>
            </field>
            <xpath expr="//field[@name='claim_line_ids']/tree" position="attributes">
                    <attribute name="decoration-danger">state == 'in_to_treate'</attribute>
                    <attribute name="decoration-muted">state == 'draft' or state == 'refused'</attribute>
                    <attribute name="decoration-info">state == 'in_to_control' or state == 'confirmed'</attribute>
                    <attribute name="decoration-success">state == 'treated' </attribute>
            </xpath>
            <field name="prodlot_id" position="attributes">
                <attribute name="invisible">1</attribute>
            </field>
            <field name="prodlot_id" position="attributes">
                <attribute name="invisible">1</attribute>
            </field>

            <xpath expr="//field[@name='state']" position="after">
                <button name="%(open_wzd_claim_line_to_scrap)d"
                        type="action"
                        string="To scrap" icon="fa-bug"
                        attrs="{'invisible': ['|',('claim_diagnosis','=','damaged'), ('state','!=','in_to_control')]}"
                        help ="Change qty to scrap/stock"/>
            </xpath>
            <xpath expr="//button[@name='%(crm_claim_rma.action_claim_picking_in)d']" position="after">
                <button name="%(action_claim_picking_int)d"
                        string="RMA to stock/scrap"
                        class="oe_inline"
                        type="action" target="new"
                        context="{'warehouse_id': warehouse_id,
                            'partner_id': partner_id}"/>
            </xpath>
            <xpath expr="//field[@name='partner_phone']" position="attributes">
                <attribute name="required">0</attribute>
            </xpath>
            <xpath expr="//field[@name='email_from']" position="attributes">
                <attribute name="required">0</attribute>
            </xpath>
        </field>
    </record>

    <record model="ir.ui.view" id="crm_claim_line_form_view">
        <field name="name">CRM - Claim product return line Form</field>
        <field name="model">claim.line</field>
        <field name="inherit_id" ref="crm_claim_rma.crm_claim_line_form_view"/>
        <field name="arch" type="xml">
            <field name="move_in_id" position="after">
                <field name="move_int_id"/>
            </field>
        </field>
    </record>

</odoo>

