<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_claim_picking_jim" model="ir.ui.view">
        <field name="name">claim_picking_jim</field>
        <field name="model">claim_make_picking.wizard</field>
        <field name="inherit_id" ref="crm_claim_rma.view_claim_picking"/>
        <field name="arch" type="xml">
            <field name="delivery_warehouse_id" position="before">
                <field name="claim_id" invisible="1"/>
                <field name="to_scrap" invisible="context.get('picking_type') != 'int'"/>
                <field name="dest_warehouse_id" invisible="context.get('picking_type') != 'in'"
                           required="context.get('picking_type') == 'in'"
                            readonly="1"/>

            </field>
            <field name="claim_line_source_location_id" position="replace">
                <field name="claim_line_source_location_id"
                        invisible="context.get('picking_type') == 'out'"
                        readonly="1"
                        required="context.get('picking_type') != 'out'"/>
            </field>

            <field name="claim_line_ids" nolabel="1" position="replace">
                <field name="claim_line_ids" nolabel="1">
                    <tree>
                        <field name="number"/>
                        <field name="claim_diagnosis"/>
                        <field name="claim_origin"/>
                        <field name="product_id"/>
                        <field name="display_name"/>
                        <field name="product_returned_quantity"/>
                        <field name="unit_sale_price"/>
                    </tree>
                </field>
            </field>

        </field>
    </record>

</odoo>
