<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
      # Purchase order to mecalux to Mecalux
        <record id="purchase_order_action_export_to_mecalux" model="ir.actions.server">
            <field name="name">Export changes to Mecalux</field>
            <field name="model_id" ref="model_purchase_order"/>
            <field name="state">code</field>
            <field name="condition">True</field>
            <field name="code">records.new_mecalux_file()</field>
        </record>
        <record id="purchase_order_menu_export_to_mecalux" model="ir.values">
            <field name="name">purchase.order.menu.export.to.mecalux</field>
            <field name="model">purchase.order</field>
            <field name="key" >action</field>
            <field name="key2">client_action_multi</field>
            <field name="value" eval="'ir.actions.server,%d'%purchase_order_action_export_to_mecalux"/>
        </record>

    </data>
</openerp>