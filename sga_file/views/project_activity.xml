        <record id="view_activity_filter" model="ir.ui.view">
            <field name="name">project.activity.select</field>
            <field name="model">project.activity</field>
            <field name="arch" type="xml">
                <search string="Search Activity">
                    <field name="project_id" string="Project"/>
                    <field name="name" string="Activity"/>
                    <field name="stage_id" string="Stage"/>
                    <field name="progress" string="progress"/>
                    <field name="is_template" string="Is template"/>

                    <filter string="My Activities" name="my_activities" domain="[('is_template','=',False),('user_id','=',uid)]"/>
                    <filter string="Templates" name="templates" domain="[('is_template','=',True)]"/>
                    <separator/>
                    <filter string="Draft" name="draft" domain="[('is_template','=',False),('stage_id', '=', 'Borrador')]"/>

                    <separator/>
                    <field name="user_id" string="Activity User"/>
                    <group expand="0" string="Group By">
                        <filter string="User" name="Manager" context="{'group_by':'user_id'}"/>
                        <filter string="Project" name="Project" context="{'group_by':'project_id'}"/>
                        <filter string="Stage" name="Sage" context="{'group_by':'stage_id'}"/>
                    </group>
                </search>
            </field>
        </record>

