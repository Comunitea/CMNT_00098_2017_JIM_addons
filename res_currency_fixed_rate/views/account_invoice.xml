<?xml version="1.0" encoding="utf-8"?>
<odoo>


        <record id="view_account_payment_form_fix_rate" model="ir.ui.view">
            <field name="name">account.payment.form.fix.rate</field>
            <field name="model">account.payment</field>
            <field name="inherit_id" ref="account.view_account_payment_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@name='amount_div']" position="after">
                    <label for="amount_company_currency"/>
                    <div name="company_amount_div" class="o_row">
                        <field name="amount_company_currency" attrs="{'readonly': [('state', '!=', 'draft')]}" widget="monetary" options="{'currency_field': 'company_currency_id'}"/>
                        <field name="company_currency_id" options="{'no_create': True, 'no_open': True}" groups="base.group_multi_currency" readonly="1"/>
                    </div>
                    <label for="fixed_rate"/>
                    <div name="rate_div" class="o_row">
                        <field name="fixed_rate" attrs="{'readonly': [('state', '!=', 'draft')]}" />
                        <field name="rate" readonly="1"/>
                    </div>
                </xpath>
            </field>
        </record>

</odoo>
