<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>


        <record model="ir.ui.view" id="product_template_only_form_view_template_code">
            <field name="name">product.template.form.hs_code</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_only_form_view"/>
            <field name="arch" type="xml">
                <field name="default_code" position="replace">
                    <label for="default_code"/>
                    <div>
                        <field name="default_code"
                               attrs="{'invisible': [('product_variant_count', '>', 1)], 'required': [('product_variant_count','=','1'), ('type','=','product')]}"/>
                        <field name="template_code" readonly="1"
                               attrs="{'invisible': [('product_variant_count', '=', 1)], 'required': [('type','=','product')]}"/>
                    </div>
                </field>
            </field>
        </record>


    </data>
</odoo>
