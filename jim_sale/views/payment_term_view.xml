<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_payment_term_prepayment_form" model="ir.ui.view">
        <field name="name">account.payment.term.prepayment.form</field>
        <field name="model">account.payment.term</field>
        <field name="inherit_id" ref="account.view_payment_term_form"/>
        <field name="arch" type="xml">
            <field name="active" position="after">
                <field name="prepayment"/>
            </field>
        </field>
    </record>

    <record id="global_discount_view_tree_add_term" model="ir.ui.view">
        <field name="model">global.discount</field>
        <field name="inherit_id" ref="base_global_discount.global_discount_view_tree"/>
        <field name="arch" type="xml">
            <field name="discount_scope" position="after">
                <field name="payment_term_id"/>
            </field>
        </field>
    </record>

    <record id="global_discount_view_form_add_term" model="ir.ui.view">
        <field name="model">global.discount</field>
        <field name="inherit_id" ref="base_global_discount.global_discount_view_form"/>
        <field name="arch" type="xml">
            <field name="discount_scope" position="after">
                <field name="payment_term_id"/>
            </field>
        </field>
    </record>


</odoo>
