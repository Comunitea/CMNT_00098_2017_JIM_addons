<odoo>

        <record id="apply_global_discount_form" model="ir.ui.view">
            <field name="name">apply.global.discount.form</field>
            <field name="model">apply.global.discount</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <field name="discount"/>
                    </group>
                    <footer>
                        <button name="apply_discount" string="Apply discount" type="object" class="oe_highlight"/>
                        or
                        <button string="Cancel" class="oe_link" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="apply_global_discount_action" model="ir.actions.act_window">
                <field name="name">Apply global discount</field>
                <field name="res_model">apply.global.discount</field>
                <field name="view_mode">form</field>
                <field name="target">new</field>
        </record>

</odoo>
