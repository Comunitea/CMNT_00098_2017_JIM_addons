                        <group>
                            <label for="categorization_type_id"/>
                            <div>
                                <field name="categorization_type_id"/>
                            </div>
                            <label for="categorization_param_ids"/>
                            <div>
                                <field name="categorization_param_ids"/>
                            </div>
                        </group>
                    </group>
                    <!--<group>
                        <field name="categorization_param_ids">
                            <tree>
                                <field name="name" string="Nombre" />
                                <field name="type_id" string="Tipo" />
                            </tree>
                        </field>
                    </group>-->
                </page>
            </xpath>
        </field>
    </record>

</odoo>
