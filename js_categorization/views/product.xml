<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- PRODUCT TEMPLATE CATEGORIZATION TAB -->

    <record id="categorization_product_form_view" model="ir.ui.view">
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='sales']" position="after">
                <page name="categorization" string="Categorization">
                    <div class="pull-left" style="margin-top:15px">
                        <label for="categorization_type"/>
                        <field name="categorization_type" options="{'no_open': True, 'no_create': True}"/>
                    </div>

                    <div id="categorization_actions" class="oe_button_box">
                        <button name="edit_unique_variant" type="object" class="btn-info" string="Edit Variant" attrs="{ 'invisible': [('product_variant_count', '&gt;', 1)] }"/>
                        <button name="new_field_modal" type="object" class="oe_highlight" string="New Field" groups="js_categorization.group_manage_categorization"/>
                    </div>

                    <div id="categorization_fields">
                        <group/>
                    </div>
                </page>
            </xpath>
        </field>
    </record>

    <!-- PRODUCT VARIANT CATEGORIZATION TAB -->

    <record id="categorization_variant_form_view" model="ir.ui.view">
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_normal_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='sales']" position="after">
                <page name="categorization" string="Categorization">
                    <div class="pull-left" style="margin-top:15px">
                        <label for="categorization_type"/>
                        <field name="categorization_type" options="{'no_open': True, 'no_create': True}"/>
                    </div>

                    <div id="categorization_actions" class="oe_button_box">
                        <button name="edit_product" type="object" class="btn-info" string="Edit Product"/>
                        <button name="new_field_modal" type="object" class="oe_highlight" string="New Field" groups="js_categorization.group_manage_categorization"/>
                    </div>

                    <div id="categorization_fields">
                        <group/>
                    </div>
                </page>
            </xpath>
        </field>
    </record>

    <!-- PRODUCT SEARCH -->

    <record id="categorization_product_search_by_field" model="ir.ui.view">
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_search_view"/>
        <field name="arch" type="xml">
            <xpath expr="//search" position="inside"/>
        </field>
    </record>

    <!-- VARIANT ONLY SEARCH -->

    <record id="categorization_variant_search_by_field" model="ir.ui.view">
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_template_search_view"/>
        <field name="arch" type="xml">
            <xpath expr="//search" position="inside"/>
        </field>
    </record>

</odoo>
