<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="categorization_product_form_view" model="ir.ui.view">
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='sales']" position="after">
                <page name="categorization" string="Categorization">
                    <div class="pull-left" style="margin-top:15px">
                        <label for="categorization_type"/>
                        <field name="categorization_type" options="{'no_open': True, 'no_create': True}"/>
                    </div>

                    <div class="oe_button_box">
                        <button name="new_field_modal" type="object" class="oe_highlight" string="New Field"/>
                    </div>

                    <group></group>
                </page>
            </xpath>
        </field>
    </record>

</odoo>
