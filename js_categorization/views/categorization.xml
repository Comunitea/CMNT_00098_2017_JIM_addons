<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- CONFIGURACIÓN DE TIPOS -->

    <record id="js_categorization_types" model="ir.actions.act_window">
        <field name="name">Tipos de Categorización</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">js_categorization.type</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
          <p class="oe_view_nocontent_create">
            Pulsa aquí para crear un nuevo tipo
          </p><p>
            Los tipos definen que parámetros se aplican al producto
          </p>
        </field>
    </record>

    <record id="js_categorization_types_tree" model="ir.ui.view">
        <field name="name">js_categorization.type.tree</field>
        <field name="model">js_categorization.type</field>
        <field name="arch" type="xml">
            <tree string="parameters">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
            </tree>
        </field>
    </record>

    <!-- CONFIGURACIÓN DE PARÁMETROS -->

    <record id="js_categorization_fields_form" model="ir.ui.view">
        <field name="name">js_categorization.field.form</field>
        <field name="model">js_categorization.field</field>
        <field name="arch" type="xml">
            <form string="Categorization Field">
                <sheet>
                    <group>
                        <group string="Field Info">
                            <field name="id" invisible="1"/>
                            <field name="categorization_type"/>
                            <field name="field_description"/>
                            <field name="name" attrs="{ 'readonly': [('id','!=',False)] }"/>
                            <field name="model_id" options="{'no_open': True, 'no_create': True}" invisible="context.get('default_model_id', False)"/>
                            <field name="ttype" attrs="{ 'readonly': [('id','!=',False)] }"/>
                            <field name="selection_vals" widget="many2many_tags" attrs="{ 'required': [('ttype','in',['many2one', 'many2many'])], 'invisible': [('ttype','not in',['many2one', 'many2many'])] }"/>
                            <field name="related"/>
                        </group>

                        <group string="Other Options">
                            <field name="required"/>
                            <field name="translate"/>
                            <field name="readonly"/>
                            <field name="index"/>
                            <field name="copy"/>
                            <field name="store"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="js_categorization_fields_tree" model="ir.ui.view">
        <field name="name">js_categorization.field.tree</field>
        <field name="model">js_categorization.field</field>
        <field name="arch" type="xml">
            <tree string="parameters">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="model_id"/>
                <field name="field_description"/>
                <field name="ttype"/>
                <field name="categorization_type"/>
            </tree>
        </field>
    </record>

    <record id="js_categorization_fields_search" model="ir.ui.view">
        <field name="name">js_categorization.field.search</field>
        <field name="model">js_categorization.field</field>
        <field name="arch" type="xml">
            <search string="Categorization Field">
                <field name="name" string="Name" />
                <field name="field_description" string="Label" />
                <filter string="Producto" name="product_filter" domain="[('model_id.model','=','product.template')]"/>
                <filter string="Variante" name="variant_filter" domain="[('model_id.model','=','product.product')]"/>
            </search>
        </field>
    </record>

    <record id="js_categorization_fields" model="ir.actions.act_window">
        <field name="name">Categorization Fields</field>
        <field name="res_model">js_categorization.field</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
          <p class="oe_view_nocontent_create">
            Pulsa aquí para crear un nuevo campo
          </p><p>
            También puedes crearlos desde la ficha del producto, en la pestaña "Categorización"
          </p>
        </field>
    </record>

    <!-- CONFIGURACIÓN DE VALORES -->

    <record id="js_categorization_values" model="ir.actions.act_window">
        <field name="name">Valores de Categorización</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">js_categorization.value</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
          <p class="oe_view_nocontent_create">
            Pulsa aquí para crear un nuevo valor
          </p><p>
            Estos valores se podrán seleccionar después en la ficha del producto
          </p>
        </field>
    </record>

    <!-- ACCIONES DE MENÚ -->

    <menuitem id="menu_js_categorization" name="Categorización" parent="stock.menu_product_in_config_stock" sequence="90" />
    <menuitem id="menu_js_categorization_fields_tree" name="Campos" parent="menu_js_categorization" action="js_categorization_fields" sequence="1" />
    <menuitem id="menu_js_categorization_types" name="Tipos" parent="menu_js_categorization" action="js_categorization_types" sequence="2" />
    <menuitem id="menu_js_categorization_values" name="Valores" parent="menu_js_categorization" action="js_categorization_values" sequence="3" />

</odoo>
